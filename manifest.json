{
  "manifest_version": 2,
  "name": "osu! beatmaps",
  "version": "0.0.2",
  "description": "osu! beatmap previewer",
  "icons": {
    "128": "src/img/icon.png"
  },
  "browser_action": {
    "default_title": "beatmap preview",
    "default_popup": "src/popup.html",
    "default_icon": "src/img/icon.png"
  },
  "homepage_url": "https://github.com/lywbh/beatmap-news",
  "permissions": [
    "tabs",
    "downloads",
    "*://*.ppy.sh/*"
  ]
}
